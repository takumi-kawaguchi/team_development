<% if @user.errors.any? %>

  <div id="error_explanation">
   <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li>
     <%= message %>
    </li>
    <% end %>
   </ul>
   </div>
<% end %>

<%= form_for @user, url: update_user_path, method: :put do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.submit %>
<% end %>
